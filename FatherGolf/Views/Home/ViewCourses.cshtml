@model IEnumerable<FatherGolf.Models.Course>

@{
    ViewData["Title"] = "ViewCourses";
}

<h1>ViewCouses</h1>

<p>
    <a asp-action="AddCourse">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Par)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrontNinePar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackNinePar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slope)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Par)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrontNinePar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackNinePar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slope)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="UpdateCourse" asp-route-id="@item.Id">Edit</a> |
                @*  <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
